@model MoodPlaylistGenerator.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<!-- Hero Section -->
<div class="page-header text-center">
    <div class="container">
        <h1 class="page-title fade-in">
            <i class="fas fa-music me-3"></i>Welcome back, @User.Identity!.Name!
        </h1>
        <p class="page-subtitle slide-up">Your personalized music universe awaits</p>
        <div class="mt-4 slide-up">
            <a href="@Url.Action("Create", "Songs")" class="btn btn-light btn-lg me-3">
                <i class="fas fa-plus me-2"></i>Add Song
            </a>
            <a href="@Url.Action("Generate", "Playlists")" class="btn btn-outline-light btn-lg">
                <i class="fas fa-magic me-2"></i>Generate Playlist
            </a>
        </div>
    </div>
</div>

<div class="container">

    <!-- Stats Cards -->
    <div class="row mb-5 fade-in">
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="stats-card">
                <div class="mb-2">
                    <i class="fas fa-music fa-2x" style="color: #667eea;"></i>
                </div>
                <div class="stats-number">@Model.TotalSongs</div>
                <div class="stats-label">Total Songs</div>
                <small class="text-muted mt-1">Songs in your library</small>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="stats-card">
                <div class="mb-2">
                    <i class="fas fa-list fa-2x" style="color: #4facfe;"></i>
                </div>
                <div class="stats-number">@Model.TotalPlaylists</div>
                <div class="stats-label">Playlists</div>
                <small class="text-muted mt-1">Generated playlists</small>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="stats-card">
                <div class="mb-2">
                    <i class="fas fa-palette fa-2x" style="color: #43e97b;"></i>
                </div>
                <div class="stats-number">@Model.Moods.Count</div>
                <div class="stats-label">Moods</div>
                <small class="text-muted mt-1">Available categories</small>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="stats-card">
                <div class="mb-2">
                    <i class="fas fa-heart fa-2x" style="color: #f093fb;"></i>
                </div>
                <div class="stats-number">@(Model.MoodSongCounts.Values.Sum())</div>
                <div class="stats-label">Mood Tags</div>
                <small class="text-muted mt-1">Total mood assignments</small>
            </div>
        </div>
    </div>

    <!-- Mood Overview -->
    <div class="row mb-5 slide-up">
        <div class="col-12">
            <div class="card">
                <div class="card-header text-center">
                    <h4 class="mb-0">
                        <i class="fas fa-palette me-2"></i>Your Mood Library
                    </h4>
                    <p class="text-muted mb-0 mt-2">Explore your music by emotional categories</p>
                </div>
                <div class="card-body">
                    <div class="row g-4">
                        @foreach (var mood in Model.Moods)
                        {
                            var songCount = Model.MoodSongCounts.ContainsKey(mood.Id) ? Model.MoodSongCounts[mood.Id] : 0;
                            <div class="col-lg-2 col-md-4 col-sm-6">
                                <div class="card h-100 text-center border-0" style="background: linear-gradient(135deg, @mood.Color, @mood.Color)20;">
                                    <div class="card-body">
                                        <div class="mb-3">
                                            @switch (mood.Name.ToLower())
                                            {
                                                case "happy":
                                                    <i class="fas fa-smile fa-2x" style="color: @mood.Color;"></i>
                                                    break;
                                                case "sad":
                                                    <i class="fas fa-frown fa-2x" style="color: @mood.Color;"></i>
                                                    break;
                                                case "relaxed":
                                                    <i class="fas fa-leaf fa-2x" style="color: @mood.Color;"></i>
                                                    break;
                                                case "energetic":
                                                    <i class="fas fa-bolt fa-2x" style="color: @mood.Color;"></i>
                                                    break;
                                                case "romantic":
                                                    <i class="fas fa-heart fa-2x" style="color: @mood.Color;"></i>
                                                    break;
                                                case "focus":
                                                    <i class="fas fa-bullseye fa-2x" style="color: @mood.Color;"></i>
                                                    break;
                                                default:
                                                    <i class="fas fa-music fa-2x" style="color: @mood.Color;"></i>
                                                    break;
                                            }
                                        </div>
                                        <h6 class="card-title fw-bold" style="color: @mood.Color;">@mood.Name</h6>
                                        <div class="mb-2">
                                            <span class="badge" style="background-color: @mood.Color;">@songCount songs</span>
                                        </div>
                                        <small class="text-muted">@mood.Description</small>
                                        @if (songCount > 0)
                                        {
                                            <div class="mt-2">
                                                <a href="@Url.Action("Index", "Songs", new { moodId = mood.Id })" class="btn btn-sm btn-outline-primary">View Songs</a>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Content -->
    <div class="row scale-in">
        <!-- Recent Songs -->
        <div class="col-lg-6 mb-4">
            <div class="card h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fas fa-clock me-2 text-primary"></i>Recent Songs
                    </h5>
                    <a href="@Url.Action("Index", "Songs")" class="btn btn-sm btn-outline-primary">
                        <i class="fas fa-arrow-right me-1"></i>View All
                    </a>
                </div>
                <div class="card-body p-0">
                    @if (Model.RecentSongs.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var song in Model.RecentSongs.Take(5))
                            {
                                <div class="list-group-item">
                                    <div class="d-flex align-items-center">
                                        <div class="flex-shrink-0 me-3">
                                            <div class="rounded-circle d-flex align-items-center justify-content-center" 
                                                 style="width: 40px; height: 40px; background: linear-gradient(135deg, #667eea, #764ba2); color: white;">
                                                <i class="fas fa-music"></i>
                                            </div>
                                        </div>
                                        <div class="flex-grow-1">
                                            <div class="d-flex w-100 justify-content-between align-items-start">
                                                <div>
                                                    <h6 class="mb-1">@song.Title</h6>
                                                    <p class="mb-1 text-muted">by @song.Artist</p>
                                                </div>
                                                <small class="text-muted">@song.CreatedAt.ToString("MMM dd")</small>
                                            </div>
                                            <div>
                                                @foreach (var sm in song.SongMoods)
                                                {
                                                    <span class="mood-badge" style="background-color: @sm.Mood.Color; font-size: 0.7em; padding: 0.2rem 0.5rem;">@sm.Mood.Name</span>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-music fa-3x text-muted mb-3"></i>
                            <p class="text-muted mb-3">No songs yet in your library</p>
                            <a href="@Url.Action("Create", "Songs")" class="btn btn-primary">
                                <i class="fas fa-plus me-2"></i>Add Your First Song
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Recent Playlists -->
        <div class="col-lg-6 mb-4">
            <div class="card h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fas fa-list me-2 text-success"></i>Recent Playlists
                    </h5>
                    <a href="@Url.Action("Index", "Playlists")" class="btn btn-sm btn-outline-success">
                        <i class="fas fa-arrow-right me-1"></i>View All
                    </a>
                </div>
                <div class="card-body p-0">
                    @if (Model.RecentPlaylists.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var playlist in Model.RecentPlaylists.Take(5))
                            {
                                <div class="list-group-item">
                                    <div class="d-flex align-items-center">
                                        <div class="flex-shrink-0 me-3">
                                            <div class="rounded-circle d-flex align-items-center justify-content-center" 
                                                 style="width: 40px; height: 40px; background-color: @playlist.Mood.Color; color: white;">
                                                <i class="fas fa-list"></i>
                                            </div>
                                        </div>
                                        <div class="flex-grow-1">
                                            <div class="d-flex w-100 justify-content-between align-items-start">
                                                <div>
                                                    <h6 class="mb-1">@playlist.Name</h6>
                                                    <p class="mb-1 text-muted">
                                                        <span class="mood-badge" style="background-color: @playlist.Mood.Color; font-size: 0.7em; padding: 0.2rem 0.5rem;">@playlist.Mood.Name</span>
                                                        @playlist.PlaylistSongs.Count songs
                                                    </p>
                                                </div>
                                                <small class="text-muted">@playlist.GeneratedAt.ToString("MMM dd")</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-list fa-3x text-muted mb-3"></i>
                            <p class="text-muted mb-3">No playlists created yet</p>
                            <a href="@Url.Action("Generate", "Playlists")" class="btn btn-success">
                                <i class="fas fa-magic me-2"></i>Generate First Playlist
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
