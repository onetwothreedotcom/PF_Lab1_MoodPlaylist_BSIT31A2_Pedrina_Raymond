@model MoodPlaylistGenerator.ViewModels.PlaylistListViewModel
@{
    ViewBag.Title = "My Playlists";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-list"></i> My Playlists</h2>
                <a asp-action="Generate" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Generate New Playlist
                </a>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <!-- Filter Options -->
            <div class="card mb-4">
                <div class="card-body">
                    <form asp-action="Index" method="get" class="row g-3">
                        <div class="col-md-6">
                            <label for="moodId" class="form-label">Filter by Mood:</label>
                            <select name="moodId" id="moodId" class="form-select">
                                <option value="">All Moods</option>
                                @foreach (var mood in Model.Moods)
                                {
                                    <option value="@mood.Id" 
                                            selected="@(Model.FilterMoodId == mood.Id ? "selected" : null)"
                                            style="color: @mood.Color;">
                                        @mood.Name
                                    </option>
                                }
                            </select>
                        </div>
                        <div class="col-md-6 d-flex align-items-end">
                            <button type="submit" class="btn btn-outline-primary me-2">
                                <i class="fas fa-filter"></i> Filter
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-times"></i> Clear
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            @if (Model.Playlists.Any())
            {
                <div class="row">
                    @foreach (var playlist in Model.Playlists)
                    {
                        <div class="col-lg-6 col-xl-4 mb-4">
                            <div class="card h-100">
                                <div class="card-header d-flex justify-content-between align-items-center" 
                                     style="border-left: 4px solid @(playlist.Mood?.Color ?? "#6c757d");">
                                    <h6 class="card-title mb-0" style="color: @(playlist.Mood?.Color ?? "#6c757d");">
                                        @(playlist.Mood?.Name ?? "Mixed")
                                    </h6>
                                    <small class="text-muted">@playlist.GeneratedAt.ToString("MMM dd, yyyy")</small>
                                </div>
                                <div class="card-body">
                                    <h5 class="card-title">@playlist.Name</h5>
                                    <p class="card-text">
                                        <i class="fas fa-music"></i> @playlist.PlaylistSongs.Count song(s)
                                    </p>
                                </div>
                                <div class="card-footer">
                                    <div class="btn-group w-100" role="group">
                                        <a asp-action="Details" asp-route-id="@playlist.Id" class="btn btn-primary">
                                            <i class="fas fa-eye"></i> View
                                        </a>
                                        <form asp-action="Delete" asp-route-id="@playlist.Id" method="post" class="d-inline">
                                            <button type="submit" class="btn btn-outline-danger" 
                                                    onclick="return confirm('Are you sure you want to delete this playlist?')">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-list fa-3x text-muted mb-3"></i>
                    <h4 class="text-muted">No playlists found</h4>
                    <p class="text-muted">
                        @if (Model.FilterMoodId.HasValue)
                        {
                            <text>Try changing your filter or </text>
                        }
                        else
                        {
                            <text>Start by adding some songs, then </text>
                        }
                        <a asp-action="Generate">generate your first playlist</a>!
                    </p>
                </div>
            }
        </div>
    </div>
</div>