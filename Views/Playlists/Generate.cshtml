@model MoodPlaylistGenerator.ViewModels.GeneratePlaylistViewModel
@{
    ViewBag.Title = "Generate Playlist";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2 class="card-title mb-0"><i class="fas fa-magic"></i> Generate New Playlist</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Generate" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="SelectedMoodId" class="form-label">Select Mood *</label>
                            <select asp-for="SelectedMoodId" class="form-select" required>
                                <option value="">Choose a mood...</option>
                                @foreach (var mood in Model.AvailableMoods)
                                {
                                    var songCount = Model.MoodSongCounts.ContainsKey(mood.Id) ? Model.MoodSongCounts[mood.Id] : 0;
                                    <option value="@mood.Id" 
                                            style="color: @mood.Color;"
                                            disabled="@(songCount == 0)">
                                        @mood.Name (@songCount song@(songCount != 1 ? "s" : ""))
                                    </option>
                                }
                            </select>
                            <span asp-validation-for="SelectedMoodId" class="text-danger"></span>
                            <div class="form-text">Only moods with songs available are enabled.</div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="SongCount" class="form-label">Number of Songs</label>
                            <input asp-for="SongCount" type="number" min="1" max="50" class="form-control" />
                            <span asp-validation-for="SongCount" class="text-danger"></span>
                            <div class="form-text">Choose between 1 and 50 songs for your playlist.</div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="PlaylistName" class="form-label">Playlist Name (Optional)</label>
                            <input asp-for="PlaylistName" type="text" class="form-control" placeholder="Leave blank for auto-generated name" />
                            <span asp-validation-for="PlaylistName" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary me-md-2">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-magic"></i> Generate Playlist
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            @if (!Model.AvailableMoods.Any() || !Model.MoodSongCounts.Any())
            {
                <div class="alert alert-info mt-4" role="alert">
                    <h5 class="alert-heading"><i class="fas fa-info-circle"></i> No Songs Available</h5>
                    <p>You need to add songs before you can generate playlists.</p>
                    <hr>
                    <p class="mb-0">
                        <a asp-controller="Songs" asp-action="Create" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Add Your First Song
                        </a>
                    </p>
                </div>
            }
        </div>
    </div>
</div>