@model MoodPlaylistGenerator.ViewModels.SongDetailViewModel
@{
    ViewBag.Title = Model.Song.Title;
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2><i class="fas fa-music"></i> @Model.Song.Title</h2>
                    <p class="text-muted mb-0">by @Model.Song.Artist</p>
                </div>
                <div>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to Songs
                    </a>
                    <a asp-action="Edit" asp-route-id="@Model.Song.Id" class="btn btn-primary">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                </div>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="row">
                <div class="col-lg-8">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">
                                @if (Model.Song.IsLocalMedia)
                                {
                                    if (Model.Song.LocalFileType == "video")
                                    {
                                        <i class="fas fa-video"></i> <text>Local Video</text>
                                    }
                                    else
                                    {
                                        <i class="fas fa-music"></i> <text>Local Audio</text>
                                    }
                                }
                                else
                                {
                                    <i class="fab fa-youtube"></i> <text>YouTube Video</text>
                                }
                            </h5>
                        </div>
                        <div class="card-body p-0">
                            @if (Model.IsUsingRickRollFallback)
                            {
                                <div class="alert alert-warning mx-3 mt-3" role="alert">
                                    <i class="fas fa-exclamation-triangle"></i> <strong>Media file not found!</strong> 
                                    Showing Rick Roll as fallback. Please re-upload your media file.
                                </div>
                                <div class="position-relative">
                                    <!-- Rick Roll Fallback Player Controls -->
                                    <div class="video-controls p-3 bg-danger text-white d-flex justify-content-between align-items-center">
                                        <div>
                                            <h6 class="mb-0 text-white">ðŸŽµ Rick Roll Fallback (Original: @Model.Song.Title)</h6>
                                            <small class="text-light opacity-75">by Rick Astley (Original by: @Model.Song.Artist)</small>
                                        </div>
                                        <div class="btn-group">
                                            <button class="btn btn-outline-light btn-sm" onclick="toggleTheater()">
                                                <i class="fas fa-expand" id="theaterIcon"></i>
                                            </button>
                                        </div>
                                    </div>
                                    <!-- Rick Roll Video Container -->
                                    <div class="youtube-container" id="videoContainer">
                                        <div class="ratio ratio-16x9">
                                            <iframe id="rickRollPlayer" 
                                                    src="@Model.MediaUrl" 
                                                    title="Rick Roll - Never Gonna Give You Up"
                                                    frameborder="0" 
                                                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" 
                                                    allowfullscreen>
                                            </iframe>
                                        </div>
                                    </div>
                                </div>
                            }
                            else if (Model.Song.IsLocalMedia && !string.IsNullOrEmpty(Model.MediaUrl))
                            {
                                <div class="position-relative">
                                    <!-- Local Media Player Controls -->
                                    <div class="video-controls p-3 bg-success text-white d-flex justify-content-between align-items-center">
                                        <div>
                                            <h6 class="mb-0 text-white">Now Playing: @Model.Song.Title</h6>
                                            <small class="text-light opacity-75">by @Model.Song.Artist (@Model.Song.LocalFileType)</small>
                                        </div>
                                        <div class="btn-group">
                                            <button class="btn btn-outline-light btn-sm" onclick="toggleTheater()">
                                                <i class="fas fa-expand" id="theaterIcon"></i>
                                            </button>
                                            <a href="@Model.MediaUrl" target="_blank" class="btn btn-outline-light btn-sm">
                                                <i class="fas fa-download"></i> Download
                                            </a>
                                        </div>
                                    </div>
                                    
                                    <!-- Local Media Container -->
                                    <div class="local-media-container" id="mediaContainer">
                                        @if (Model.Song.LocalFileType == "video")
                                        {
                                            <video id="localVideoPlayer" controls style="width: 100%; height: auto;">
                                                <source src="@Model.MediaUrl" type="video/mp4">
                                                <source src="@Model.MediaUrl" type="video/avi">
                                                <source src="@Model.MediaUrl" type="video/mov">
                                                <source src="@Model.MediaUrl" type="video/webm">
                                                Your browser does not support the video tag.
                                            </video>
                                        }
                                        else
                                        {
                                            <div class="audio-player-wrapper p-4">
                                                <audio id="localAudioPlayer" controls style="width: 100%;">
                                                    <source src="@Model.MediaUrl" type="audio/mpeg">
                                                    <source src="@Model.MediaUrl" type="audio/wav">
                                                    <source src="@Model.MediaUrl" type="audio/ogg">
                                                    <source src="@Model.MediaUrl" type="audio/m4a">
                                                    <source src="@Model.MediaUrl" type="audio/aac">
                                                    Your browser does not support the audio element.
                                                </audio>
                                                <div class="text-center mt-3">
                                                    <i class="fas fa-music fa-3x text-muted"></i>
                                                    <p class="text-muted mt-2">@Model.Song.LocalFileName</p>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            }
                            else if (!string.IsNullOrEmpty(Model.YouTubeVideoId))
                            {
                                <div class="position-relative">
                                    <!-- YouTube Video Player Controls -->
                                    <div class="video-controls p-3 bg-dark text-white d-flex justify-content-between align-items-center">
                                        <div>
                                            <h6 class="mb-0 text-white">Now Playing: @Model.Song.Title</h6>
                                            <small class="text-light opacity-75">by @Model.Song.Artist</small>
                                        </div>
                                        <div class="btn-group">
                                            <button class="btn btn-outline-light btn-sm" onclick="toggleTheater()">
                                                <i class="fas fa-expand" id="theaterIcon"></i>
                                            </button>
                                            <a href="@Model.Song.YouTubeUrl" target="_blank" class="btn btn-outline-light btn-sm">
                                                <i class="fab fa-youtube"></i> YouTube
                                            </a>
                                        </div>
                                    </div>
                                    
                                    <!-- YouTube Video Container -->
                                    <div class="youtube-container" id="videoContainer">
                                        <div class="ratio ratio-16x9">
                                            <iframe id="youtubePlayer" 
                                                    src="https://www.youtube.com/embed/@Model.YouTubeVideoId?enablejsapi=1&modestbranding=1&rel=0" 
                                                    title="@Model.Song.Title by @Model.Song.Artist"
                                                    frameborder="0" 
                                                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" 
                                                    allowfullscreen>
                                            </iframe>
                                        </div>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="text-center py-4">
                                    <i class="fas fa-exclamation-triangle fa-2x text-warning mb-3"></i>
                                    <p class="text-muted">Unable to load media preview</p>
                                    @if (!string.IsNullOrEmpty(Model.Song.YouTubeUrl))
                                    {
                                        <a href="@Model.Song.YouTubeUrl" target="_blank" class="btn btn-outline-primary">
                                            <i class="fab fa-youtube"></i> Open in YouTube
                                        </a>
                                    }
                                </div>
                            }
                        </div>
                        <div class="card-footer">
                            @if (Model.Song.IsLocalMedia)
                            {
                                @if (Model.IsLocalMediaMissing)
                                {
                                    <span class="text-danger"><i class="fas fa-exclamation-triangle"></i> Local file missing</span>
                                }
                                else
                                {
                                    <a href="@Model.MediaUrl" target="_blank" class="btn btn-outline-success">
                                        <i class="fas fa-download"></i> Download @(Model.Song.LocalFileType?.ToUpper() ?? "FILE")
                                    </a>
                                    <span class="text-muted ms-2">File: @Model.Song.LocalFileName</span>
                                }
                            }
                            else if (!string.IsNullOrEmpty(Model.Song.YouTubeUrl))
                            {
                                <a href="@Model.Song.YouTubeUrl" target="_blank" class="btn btn-outline-primary">
                                    <i class="fab fa-youtube"></i> Watch on YouTube
                                </a>
                            }
                        </div>
                    </div>
                </div>

                <div class="col-lg-4 mt-4 mt-lg-0">
                    <div class="card">
                        <div class="card-header">
                            <h6 class="mb-0"><i class="fas fa-info-circle"></i> Song Details</h6>
                        </div>
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-4">Title:</dt>
                                <dd class="col-sm-8">@Model.Song.Title</dd>

                                <dt class="col-sm-4">Artist:</dt>
                                <dd class="col-sm-8">@Model.Song.Artist</dd>

                                <dt class="col-sm-4">Added:</dt>
                                <dd class="col-sm-8">@Model.Song.CreatedAt.ToString("MMM dd, yyyy")</dd>

                                <dt class="col-sm-4">Moods:</dt>
                                <dd class="col-sm-8">
                                    @if (Model.AssignedMoods.Any())
                                    {
                                        @foreach (var mood in Model.AssignedMoods)
                                        {
                                            <span class="badge me-1 mb-1" style="background-color: @mood.Color;">
                                                @mood.Name
                                            </span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted">No moods assigned</span>
                                    }
                                </dd>
                            </dl>
                        </div>
                        <div class="card-footer">
                            <form asp-action="Delete" asp-route-id="@Model.Song.Id" method="post" class="d-grid">
                                <button type="submit" class="btn btn-outline-danger" 
                                        onclick="return confirm('Are you sure you want to delete this song?')">
                                    <i class="fas fa-trash"></i> Delete Song
                                </button>
                            </form>
                        </div>
                    </div>

                    @if (Model.AssignedMoods.Any())
                    {
                        <div class="card mt-4">
                            <div class="card-header">
                                <h6 class="mb-0"><i class="fas fa-palette"></i> Mood Information</h6>
                            </div>
                            <div class="card-body">
                                @foreach (var mood in Model.AssignedMoods)
                                {
                                    <div class="mb-2">
                                        <h6 class="mb-1" style="color: @mood.Color;">@mood.Name</h6>
                                        <small class="text-muted">@mood.Description</small>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>