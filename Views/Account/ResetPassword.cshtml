@model MoodPlaylistGenerator.ViewModels.ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset Password";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h3>ðŸ”‘ Reset Password</h3>
            </div>
            <div class="card-body">
                <p class="text-muted mb-4">Enter your new password below.</p>
                
                <form asp-action="ResetPassword" method="post">
                    <input asp-for="Token" type="hidden" />
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="Password" class="form-label">New Password</label>
                        <input asp-for="Password" class="form-control" type="password" placeholder="Enter new password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="ConfirmPassword" class="form-label">Confirm New Password</label>
                        <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirm new password" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">Reset Password</button>
                    </div>
                </form>

                <div class="mt-3 text-center">
                    <a asp-action="Login">Back to Login</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
